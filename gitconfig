[user]
	name = Tyler Sommer
	email = sommertm@gmail.com

[alias]
    del-merged = "!git branch --merged | grep -v \\* | xargs -n 1 git branch -d"
    assume   = update-index --assume-unchanged
    unassume = update-index --no-assume-unchanged
    assumed  = "!git ls-files -v | grep ^h | cut -c 3-"
    snapshot = !git stash save "snapshot: $(date)" && git stash apply "stash@{0}"
	a = add
	aa = add --all
	ae = add --edit
	ai = add --interactive
	amend = commit --amend -C HEAD
	ap = add --patch
	au = add --update
	authors = "!git log --pretty=format:%aN | sort | uniq -c | sort -rn"
    commits = "log --pretty=oneline --shortstat --abbrev-commit"
	b = branch
	c = commit
	ca = commit --amend
	changes = diff --name-status -r
	cm = commit --message
	co = checkout
	cpc = cherry-pick
	d = diff
	dc = diff --cached
	div = divergence
	ds = diff --staged
	h = help
	irb = rebase --interactive
	l = log --oneline --decorate
	lg = log --graph --pretty=format:'%Cred%h%Creset %an -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
	ls-ignored = ls-files --exclude-standard --ignored --others
	m = merge
	mm = merge --no-ff
	msg = commit --allow-empty -m
	p = cherry-pick -s
	pick = cherry-pick
	prune-remotes = "!for remote in `git remote`; do git remote prune $remote; done"
	r = remote
    relra = !git log --graph --abbrev-commit --date=relative -20 --pretty='format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset'
    ra = !git log --graph --abbrev-commit --date=relative -20 --all --pretty='format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset'
	rb = rebase
	rba = rebase --abort
	rbc = rebase --continue
	rbs = rebase --skip
	rh = reset --hard
	ru = remote update --prune
	s = status --short --branch
	sl = shortlog
	sm = submodule
	sma = submodule add
	smu = submodule update --init
	st = stash
	stl = stash list
	stp = stash pop
	undo = reset --soft HEAD^
	wd = diff --word-diff
	wds = diff --word-diff --staged
    wdc = diff --word-diff --cached
	push = push --tags
	stat = status
    meld = difftool --dir-diff

[advice]
	pushNonFastForward = false
	statusHints = false

[apply]
	whitespace = nowarn

[diff]
	renames = copies
	mnemonicprefix = true
	tool = araxis
	algorithm = default

[difftool]
	prompt = false

[pager]
	color = true

[branch]
	autosetupmerge = true

[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[svn]
	brokenSymlinkWorkaround = false

[push]
	default = tracking

[help]
	autocorrect = 0

[core]
	excludesfile = ~/.gitignore
	whitespace = trailing-space,space-before-tab
	quotepath = false
	autocrlf = input

[rerere]
	enabled = 1

[merge]
    tool = araxis

[diff "zip"]
  textconv = unzip -c -a

[github]
	user = tyler-sommer
[treediff]
	tool = meld
[treediff "meld"]
	cmd = git-meld-cmd
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
